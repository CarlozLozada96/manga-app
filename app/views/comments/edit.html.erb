<h1>Edit Comment</h1>

<%= form_for @comment do |f| %> 
  <div class="field">
    <%= f.text_area :content %>
  </div>
  
  <%= hidden_field_tag :manga_ref, @comment.manga_ref %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', manga_path(@comment.manga_ref) %>
