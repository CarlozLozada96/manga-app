<div id="Home">
  <% if user_signed_in? %>
    <p>Welcome, <%= current_user.email %>!</p>
    <% if current_user.has_role?(:admin) %>
      <p>You are an admin.</p>
      <!-- Additional admin-only content can go here -->
    <% end %>
   <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to "Login", new_user_session_path %>
    <%= link_to "Register", new_user_registration_path %>
  <% end %>

  <h1> Manga List </h1>
  <ul id="Home-manga">
    <% @manga_list['data'].each do |manga| %>
      <% cover_art_url = @cover_art_urls[manga['id']] %>
      <li>
        <%= image_tag cover_art_url, alt: manga['attributes']['title']['en'], size: '170x250' %>
        <p> <%= link_to manga['attributes']['title']['en'], manga_path(manga['id']) %> </p>
      </li>
    <% end %>
  </ul>
</div>

